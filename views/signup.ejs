<%- include('partials/header', {title: 'Sign Up', user: user}) -%>

<div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <!-- Maybe add a logo here later -->
      <!-- <img
        class="mx-auto h-12 w-auto"
        src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
        alt="Your Company"
      /> -->
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-primary-content">
        Sign up to start your journey
      </h2>
    </div>
    <form class="mt-8 space-y-6" action="/signup" method="POST">
      <input type="hidden" name="remember" value="true" />
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="email-address" name="email" type="email" autocomplete="email" required
            class="relative block w-full appearance-none rounded-none rounded-t-md border bg-base-200 border-accent px-3 py-2 text-primary-content placeholder-primary-content focus:z-10 focus:border-accent focus:outline-none focus:ring-accent sm:text-sm"
            placeholder="Email address" />
        </div>
        <div>
          <label for="username" class="sr-only">Username</label>
          <input id="username" name="username" type="username" autocomplete="username" required
            class="relative block w-full appearance-none rounded-none rounded-t-md border bg-base-200 border-accent px-3 py-2 text-primary-content placeholder-primary-content focus:z-10 focus:border-accent focus:outline-none focus:ring-accent sm:text-sm"
            placeholder="Username" />
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="password" type="password" autocomplete="current-password" required
            class="relative block w-full appearance-none rounded-none rounded-b-md border bg-base-200 border-accent px-3 py-2 text-primary-content placeholder-primary-content focus:z-10 focus:border-accent focus:outline-none focus:ring-accent sm:text-sm"
            placeholder="Password" />
        </div>
      </div>

      <div>
        <button type="submit"
          class="group relative flex w-full justify-center rounded-md border border-accent bg-base-200 py-2 px-4 text-sm font-medium text-primary-content hover:text-primary hover:bg-primary-focus focus:outline-none focus:ring-2 focus:ring-primary-focus focus:ring-offset-2">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <!-- Heroicon name: mini/lock-closed -->
            <svg class="h-5 w-5 text-primary-content group-hover:text-primary" xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd"
                d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z"
                clip-rule="evenodd" />
            </svg>
          </span>
          Sign Up
        </button>
      </div>
    </form>

    <button
      class="group relative flex w-full justify-center rounded-md border border-accent bg-base-200 py-2 px-4 text-sm font-medium text-primary-content hover:text-primary hover:bg-primary-focus focus:outline-none focus:ring-2 focus:ring-primary-focus focus:ring-offset-2"
      onclick="location.href='/'">
      Back Home
    </button>
  </div>
</div>

<%- include('partials/footer') -%>